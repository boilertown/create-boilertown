{
	"name": "create-boilertowns",
	"private": true,
	"version": "0.0.0",
	"description": "The ultimate boilerplate generator for your project.",
	"author": "mikunpham <mikun1993@gmail.com>",
	"license": "MIT",
	"type": "module",
	"bin": "./dist/index.js",
	"exports": "./dist/index.js",
	"engines": {
		"node": ">=14.16"
	},
	"files": [
		"dist"
	],
	"keywords": [
		"boilertowns",
		"boilerplate",
		"template"
	],
	"scripts": {
		"build": "tsup src/index.ts --format esm --clean --minify --metafile",
		"dev": "tsup src/index.ts --format esm --watch --clean --onSuccess \"node dist/index.js\"",
		"format": "prettier --write \"**/*.{ts,tsx,md,mdx,json}\"",
		"prepare": "husky install"
	},
	"dependencies": {
		"chalk": "^5.0.1",
		"commander": "^9.3.0",
		"enquirer": "^2.3.6",
		"figlet": "^1.5.2",
		"fs-extra": "^10.1.0",
		"gradient-string": "^2.0.1",
		"human-id": "^4.0.0",
		"ora": "^6.1.2"
	},
	"devDependencies": {
		"@commitlint/cli": "^17.0.3",
		"@commitlint/config-conventional": "^17.0.3",
		"@trivago/prettier-plugin-sort-imports": "^3.2.0",
		"@types/figlet": "^1.5.4",
		"@types/gradient-string": "^1.1.2",
		"@types/node": "^18.0.3",
		"@typescript-eslint/eslint-plugin": "^5.30.5",
		"@typescript-eslint/parser": "^5.30.5",
		"eslint": "^8.19.0",
		"eslint-config-prettier": "^8.5.0",
		"eslint-plugin-prettier": "^4.2.1",
		"husky": "^8.0.1",
		"lint-staged": "^13.0.3",
		"prettier": "^2.7.1",
		"tsup": "^6.1.3",
		"type-fest": "^2.16.0",
		"typescript": "^4.7.4"
	},
	"lint-staged": {
		"*.{js,jsx,ts,tsx}": [
			"eslint --fix",
			"prettier --write"
		],
		"*.{md,mdx,yml,json}": [
			"prettier --write"
		]
	}
}
