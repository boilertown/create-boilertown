{
	"name": "create-boilertowns",
	"version": "0.0.8",
	"description": "The ultimate boilerplate generator for your project.",
	"author": "mikunpham <mikun1993@gmail.com>",
	"license": "MIT",
	"type": "module",
	"bin": "./dist/index.js",
	"exports": "./dist/index.js",
	"engines": {
		"node": ">=14.16"
	},
	"files": [
		"dist"
	],
	"keywords": [
		"boilertowns",
		"boilerplate",
		"template",
		"generator",
		"scaffolding"
	],
	"scripts": {
		"boilerplate:add": "node ./scripts/add-boilerplate.js",
		"build": "tsup src/index.ts --format esm --clean --minify --metafile",
		"dev": "tsup src/index.ts --format esm --watch --clean --onSuccess \"node dist/index.js\"",
		"test": "vitest run",
		"prepare": "husky install",
		"changeset": "changeset",
		"release": "changeset publish"
	},
	"dependencies": {
		"camelcase": "^7.0.0",
		"chalk": "^5.1.2",
		"commander": "^9.4.1",
		"enquirer": "^2.3.6",
		"figlet": "^1.5.2",
		"globby": "^13.1.2",
		"gradient-string": "^2.0.2",
		"ora": "^6.1.2",
		"sort-package-json": "^2.0.0",
		"yaml": "^2.1.3"
	},
	"devDependencies": {
		"@changesets/changelog-github": "^0.4.7",
		"@changesets/cli": "^2.25.1",
		"@commitlint/cli": "^17.1.2",
		"@commitlint/config-conventional": "^17.1.0",
		"@trivago/prettier-plugin-sort-imports": "^4.0.0",
		"@types/figlet": "^1.5.5",
		"@types/gradient-string": "^1.1.2",
		"@types/node": "^18.11.8",
		"@typescript-eslint/eslint-plugin": "^5.41.0",
		"@typescript-eslint/parser": "^5.41.0",
		"ansi-regex": "^6.0.1",
		"eslint": "^8.26.0",
		"eslint-config-prettier": "^8.5.0",
		"eslint-plugin-prettier": "^4.2.1",
		"handlebars": "^4.7.7",
		"husky": "^8.0.1",
		"lint-staged": "^13.0.3",
		"prettier": "^2.7.1",
		"tsup": "^6.3.0",
		"type-fest": "^3.1.0",
		"typescript": "^4.8.4",
		"vitest": "^0.24.3"
	},
	"lint-staged": {
		"*.{js,jsx,ts,tsx}": [
			"eslint --fix",
			"prettier --write"
		],
		"*.{md,mdx,yml,json}": [
			"prettier --write"
		]
	}
}
